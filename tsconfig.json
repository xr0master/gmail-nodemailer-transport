{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "noLib": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": false,
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts"]
}
